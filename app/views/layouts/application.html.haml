!!!
%html
  %head
    %title Espn
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default
      .container
        .navbar-header
          = link_to "ESPN FAN FORUM", root_path, class: "navbar-brand"
        %ul.navbar-nav.navbar-right
          - if user_signed_in?
            %li= link_to "Sign Out", destroy_user_session_path, method: :delete
          - else
            %li.auth= link_to "Log In", new_user_session_path
            %li.auth= link_to "Sign Up", new_user_registration_path
          - if user_signed_in?
            %p= link_to "Post It", new_message_path, class: "navbar-text navbar-link"
    %p.notice= notice
    %p.alert= alert
    .container
      = yield